<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/contactAddActivity_toolbar"
                style="@style/MyToolbar.ActionBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/contactAddActivity_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="필수정보" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="24dp" android:layout_marginTop="8dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <com.andreabaccega.widget.FormEditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/contactAddActivity_editText_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="이름"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:nextFocusDown="@+id/contactAddActivity_editText_phone"
                    whatever:emptyErrorString="1글자 이상 입력하여야 합니다."
                    whatever:testType="personName" />
            </LinearLayout>

            <requestFocus />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="24dp" android:layout_marginTop="8dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cell_phone" />

                <com.andreabaccega.widget.FormEditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/contactAddActivity_editText_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="핸드폰 번호"
                    android:imeOptions="actionSend"
                    android:inputType="phone"
                    android:lines="1"
                    whatever:emptyErrorString="올바른 번호를 입력하세요"
                    whatever:testErrorString="올바른 번호를 입력하세요"
                    whatever:testType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="추가정보" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="24dp" android:layout_marginTop="8dp"
                        android:layout_height="24dp"
                        android:src="@drawable/city" />

                    <com.andreabaccega.widget.FormEditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="회사/학교" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="24dp" android:layout_marginTop="8dp"
                        android:layout_height="24dp"
                        android:src="@drawable/department" />

                    <com.andreabaccega.widget.FormEditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="부서/학부" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="24dp" android:layout_marginTop="8dp"
                        android:layout_height="24dp"
                        android:src="@drawable/responsibility" />

                    <com.andreabaccega.widget.FormEditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="직책/학년" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="24dp" android:layout_marginTop="8dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone_black_24dp" />

                    <com.andreabaccega.widget.FormEditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="회사 전화" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="24dp" android:layout_marginTop="8dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_local_printshop_black_24dp" />

                    <com.andreabaccega.widget.FormEditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="팩스" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <ImageView
                        android:layout_width="24dp" android:layout_marginTop="8dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mail_outline_black_24dp" />

                    <com.andreabaccega.widget.FormEditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이메일(ex.abb@whoru.com)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="추가 정보들은 추후 수정가능하며,\nSNS와 같은 추가정보들도 추후 추가 가능합니다."
                        android:textColor="#000000"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
